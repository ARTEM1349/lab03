 -------------------------------------------------------------------lab5.c--------------------------------------------------------------------------------------------------------------------
 # include<stdio.h>
# include"lab06.c"

 
 int  lab06  (int p, int b, int c) {
         b  = 1;
         t = p;
    for (b  = t ;b >0 ;b--){
        c = c*b ;
        printf("%d\n",c );
    }
    return 0;
}
